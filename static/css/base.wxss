}

/*  */
.text-ell-1{
  display:block ;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
 }
 .text-ell-2{

  text-overflow:ellipsis;
 
  overflow:hidden;
 
  display:-webkit-box;
 
  -webkit-line-clamp:2; /*这个数字是设置要显示省略号的行数*/
 
  -webkit-box-orient:vertical;
 
 }