/* flex */
.flex-r-c{
    display: flex;
    justify-content: center;
    align-items: center;
}
.flex-r-s{
  display: flex;
  justify-content: start;
  align-items: center;
}
.flex-c-c{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* align-content: center; */
}
.flex-r-b{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.flex-1{
  flex: 1;
}
/* position */
.p-a-r{
  position: absolute;
  left: 50%;
  transform: translate(-50%,0);
}
/* main color */
