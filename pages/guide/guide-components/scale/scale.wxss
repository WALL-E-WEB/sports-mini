.scale {}

.scale-title {}

.scroll-view-wrap {
  position: relative;
}

.pointer {
  position: absolute;
  top: 18px;
  left: 50%;
  transform: translate(-50%, 0);
  width: 0;
  height: 0;
  border-style: solid;
  border-width:10px;
  border-color:#2b2a3a  transparent transparent transparent;
  z-index: 2;
}

.scroll-view {
  position: relative;
  white-space: nowrap;
  border: 1px dashed #ccc;
  display: flex;
  align-items: center;

}

.scroll-item {
  position: relative;
  display: inline-block;
  width: 1px;
  height: 20px;
  background-color: #b9babf;
}
.numerical{
  position: absolute;
  bottom: -25px;
  left: 50%;
  transform: translate(-50%,0);
}

.scroll-item-wrap {
  display: flex;
  align-items: flex-start;
}



.scroll-item.five {
  height: 25px;
}

.scroll-item.five.ten {
  height: 35px;
}

